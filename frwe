    <!-- Link to your countdown.js file -->
    <script src="countdown.js" defer></script> 
    
    <!-- Modal, Menu, and Icon Logic Script -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // --- Loader Logic ---
            const loader = document.getElementById('loader-overlay');
            window.addEventListener('load', () => {
                if (loader) {
                    loader.classList.add('hidden');
                    setTimeout(() => {
                        if (loader.style) {
                            loader.style.display = 'none';
                        }
                    }, 500); // Match transition duration
                }
            });
            // --- End of Loader Logic ---

            // --- Mobile Menu Toggle ---
            const menuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            const menuIcon = document.getElementById('menu-icon');

            if (menuButton && mobileMenu && menuIcon) {
                menuButton.addEventListener('click', () => {
                    mobileMenu.classList.toggle('hidden');
                    
                    if (mobileMenu.classList.contains('hidden')) {
                        menuIcon.setAttribute('data-lucide', 'menu');
                    } else {
                        menuIcon.setAttribute('data-lucide', 'x');
                    }
                    if (typeof lucide !== 'undefined') {
                        lucide.createIcons(); // Re-render the new icon
                    }
                });
            }
            // --- End of Mobile Menu ---


            // Activate Lucide Icons on initial load
            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }

            // --- Generic Modal Setup ---
            const modalMap = {
                'rules-link-desktop': 'rules-modal',
                'rules-link-mobile': 'rules-modal',
                'tools-link': 'tools-modal',
                'organizers-link': 'organizers-modal',
                'prizes-link': 'prizes-modal'
            };

            const allModalIds = ['rules-modal', 'tools-modal', 'organizers-modal', 'prizes-modal'];

            const showModal = (modalId) => {
                const modal = document.getElementById(modalId);
                if (modal) {
                    modal.classList.remove('hidden');
                    if (typeof lucide !== 'undefined') {
                        lucide.createIcons();
                    }
                }
            };

            const hideModal = (modalId) => {
                const modal = document.getElementById(modalId);
                if (modal) {
                    modal.classList.add('hidden');
                }
            };

            for (const linkId in modalMap) {
                const link = document.getElementById(linkId);
                const modalId = modalMap[linkId];
                if (link) {
                    link.addEventListener('click', (e) => {
                        e.preventDefault(); 
                        
                        if (linkId === 'rules-link-mobile' && mobileMenu && !mobileMenu.classList.contains('hidden')) {
                             mobileMenu.classList.add('hidden');
                             menuIcon.setAttribute('data-lucide', 'menu');
                             if (typeof lucide !== 'undefined') {
                                 lucide.createIcons();
                             }
                        }
                        
                        showModal(modalId);
                    });
                }
            }

            allModalIds.forEach(modalId => {
                const modal = document.getElementById(modalId);
                if (modal) {
                    modal.addEventListener('click', (e) => {
                        if (e.target === modal) {
                            hideModal(modalId);
                        }
                    });

                    const closeButtons = modal.querySelectorAll('.modal-close-btn');
                    closeButtons.forEach(btn => {
                        btn.addEventListener('click', () => {
                            hideModal(modalId);
                        });
                    });
                }
            });
            // --- [END] Generic Modal Setup ---

            // --- GIF Slideshow Logic ---
            let currentSlide = 0;
            const slides = document.querySelectorAll('.gif-slide');
            const slideCount = slides.length;

            if (slideCount > 0) {
                // Set the first slide as active immediately
                slides[0].classList.add('active');

                setInterval(() => {
                    // Remove active class from current slide
                    slides[currentSlide].classList.remove('active');
                    
                    // Move to the next slide
                    currentSlide = (currentSlide + 1) % slideCount;
                    
                    // Add active class to the new current slide
                    slides[currentSlide].classList.add('active');
                }, 5000); // Change slide every 5 seconds (5000ms)
            }
            // --- [END] GIF Slideshow Logic ---

        });
    </script>
</body>
</html>
